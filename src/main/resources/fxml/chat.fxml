<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="490.0" stylesheets="@../css/chat.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javachat_project.ChatController">

   <children>

      <AnchorPane fx:id="chat_name_pane" prefHeight="60.0" stylesheets="@../css/chat.css" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label id="chat_name_label" fx:id="chat_name" prefHeight="18.0" stylesheets="@../css/chat.css" text="Chat" AnchorPane.leftAnchor="24.0" AnchorPane.topAnchor="14.0" />
         </children>
      </AnchorPane>

      <ListView fx:id="messageListView" styleClass="chat-messages" AnchorPane.bottomAnchor="58.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0" />

      <TextField fx:id="messageInput" prefHeight="44.0" promptText="Type your message..." styleClass="chat-input" AnchorPane.bottomAnchor="9.0" AnchorPane.leftAnchor="6.0" AnchorPane.rightAnchor="55.0" />


      <ImageView fx:id="send" accessibleRole="BUTTON" fitHeight="44.0" fitWidth="39.0" onMouseClicked="#send" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="9.0" AnchorPane.rightAnchor="6.0">
         <image>
            <Image url="@../img/sending.png" />
         </image>
      </ImageView>
      
   </children>
</AnchorPane>
